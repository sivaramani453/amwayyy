{
	"variables": {
		"aws_access_key": "",
		"aws_secret_key": "",
		"nexus_admin_password": "{{ vault `/amway/data/nexus/admin` `password` }}" 
	},
	"builders": [{
		"type": "amazon-ebs",
		"access_key": "{{user `aws_access_key`}}",
		"secret_key": "{{user `aws_secret_key`}}",
		"region": "eu-central-1",
		"instance_type": "t3.large",
		"ssh_username": "centos",
		"ami_name": "nexus {{ isotime `2006-01-02-03-04` }}",
		"iam_instance_profile": "dev_debug",
		"source_ami_filter": {
			"filters": {
			"virtualization-type": "hvm",
			"name": "centos7-golden*",
			"root-device-type": "ebs"
			},
			"owners": ["self"],
			"most_recent": true
		},
		"tags": {
			"Name": "nexus created by packer",
			"DataClassification": "Internal",
			"ApplicationID": "APP1433689",
			"Environment": "DEV"
		},
		"vpc_filter": {
			"filters": {
				"tag:Name": "amway-europe-hybris-dev",
				"isDefault": "false"
			}
		},
		"subnet_filter": {
			"filters": {
				"tag:Name": "core-private-a"
			},
			"most_free": true
		}
	}],
	"provisioners": [
		{
			"type": "shell-local",
			"inline": "cd ../ansible/nexus && ansible-galaxy install -r requirements.yml -p ../roles/"
		},
    		{
      			"type": "shell",
      			"inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
    		},
		{
			"type": "ansible",
			"extra_arguments": [
				"-v", "--extra-vars", "nexus_admin_password={{ user `nexus_admin_password` }}"
			],
			"playbook_file": "../ansible/nexus/nexus.yml"
		}
	]
}

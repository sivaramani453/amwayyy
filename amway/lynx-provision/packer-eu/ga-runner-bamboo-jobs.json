{
  "variables": {
    "aws_region": "eu-central-1",
    "aws_vpc": "vpc-04d64ae6866c7d6d3",
    "aws_subnet": "subnet-0dfcf6324786fd8ff",
    "github_token": "{{ vault `/amway/data/github/git_admin_user_4_enterprise` `token_repo_scope` }}",
    "root_password": "{{ vault `/amway/data/databases/mysql/local/root` `password` }}",
    "hybris_password": "{{ vault `/amway/data/databases/mysql/environment` `password` }}",
    "is_public": "false"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["self"],
      "most_recent": true
    },
    "instance_type": "t3.micro",
    "ssh_username": "centos",
    "associate_public_ip_address": "{{user `is_public`}}",
    "ami_name": "ga-runner-bamboo-jobs {{ isotime `2006-01-02-03-04` }}",
    "tags": {
      "Name": "Lynx Bamboo job qa",
      "OwnedBy": "Nikita Podiashvili",
      "ApplicationID": "APP1433689",
      "DataClassification": "Internal",
      "Environment": "DEV"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible-eu/github-actions/runner-bamboo-jobs && ansible-galaxy install -r requirements.yaml -p ../../roles/ -f"
    },
    {
      "type": "ansible",
      "extra_arguments": [
        "--extra-vars", "github_token={{ user `github_token` }} root_password={{ user `root_password` }} hybris_password={{ user `hybris_password` }}"
      ],
      "playbook_file": "../ansible-eu/github-actions/runner-bamboo-jobs/main.yaml"
    }
  ]
}

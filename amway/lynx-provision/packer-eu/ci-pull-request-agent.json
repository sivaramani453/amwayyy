{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_vpc": "vpc-04d64ae6866c7d6d3",
    "aws_subnet": "subnet-0dfcf6324786fd8ff",
    "git_admin_user_1": "{{ vault `/amway/data/github/git_admin_user_1` `username` }}",
    "git_admin_user_2": "{{ vault `/amway/data/github/git_admin_user_4_enterprise` `username` }}",
    "git_admin_user_1_password": "{{ vault `/amway/data/github/git_admin_user_1` `password` }}",
    "git_admin_user_2_password": "{{ vault `/amway/data/github/git_admin_user_4_enterprise` `token_repo_scope` }}",
    "mysql_password": "{{ vault `/amway/data/bamboo/agents/mysql_root_password` `password` }}",
    "aws_region": "eu-central-1"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "associate_public_ip_address": false,
    "iam_instance_profile": "dev_debug",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["self"],
      "most_recent": true
    },
    "instance_type": "t3.xlarge",
    "ssh_username": "centos",
    "ami_name": "CI-SPOT-PR {{timestamp}}",
    "tags": {
      "Name": "created by packer",
      "OwnedBy": "Vladimir Antropov",
      "ApplicationID": "APP1433689",
      "DataClassification": "Internal",
      "Environment": "DEV"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible-eu/ci-pull-requests-agent/ && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
	},
    {
      "type": "ansible",
      "extra_arguments": [
        "-v", "--extra-vars", "git_admin_user_1={{ user `git_admin_user_1` }} git_admin_user_1_password={{ user `git_admin_user_1_password` }} git_admin_user_2={{ user `git_admin_user_2` }} git_admin_user_2_password={{ user `git_admin_user_2_password` }} MYSQL_PASSWORD={{ user `mysql_password` }}"
      ],
      "playbook_file": "../ansible-eu/ci-pull-requests-agent/main.yml"
    },
    {
      "type": "shell",
      "inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
    }
  ]
}

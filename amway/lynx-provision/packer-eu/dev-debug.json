{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "download_hybris_url": "https://nexus.hybris.eu.eia.amway.net/repository/static-files/hybris/last_6.6.0.29.zip"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
        "virtualization-type": "hvm",
        "name": "amzn2-ami-hvm-*-x86_64-gp2*",
        "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "vpc_id": "vpc-04d64ae6866c7d6d3",
      "subnet_id": "subnet-0dfcf6324786fd8ff",
      "iam_instance_profile": "dev_debug",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/xvda",
          "volume_type": "gp2",
          "volume_size": 16
        }
      ],
      "instance_type": "t3.large",
      "ssh_username": "ec2-user",
      "associate_public_ip_address": false,
      "ami_name": "dev-debug {{ isotime `2006-01-02-03-04` }}",
      "tags": {
        "Name": "dev debug ami created by packer",
        "OwnedBy": "Vladimir Antropov",
        "ApplicationID": "APP1433689",
        "DataClassification": "Internal",
        "Environment": "DEV" 
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible-eu/dev-debug && ansible-galaxy install -r requirements.yml -p ../roles/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys",
        "sudo sed -i '$ a ssh-rsa  vladimir@icevortex' /home/ec2-user/.ssh/authorized_keys; sudo chown ec2-user /home/ec2-user/.ssh/authorized_keys; sudo chmod 600 /home/ec2-user/.ssh/authorized_keys",
        "sudo yum -y install python2-pip python3"
      ]
    },
    {
      "type": "ansible",
      "extra_arguments": [
        "-v", "--extra-vars", "download_hybris_url={{user `download_hybris_url`}}"
      ],
      "playbook_file": "../ansible-eu/dev-debug/bootstrap.yml"
    }
  ]
}

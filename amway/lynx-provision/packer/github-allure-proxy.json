{
  "variables": {
    "aws_region": "eu-central-1",
    "aws_vpc": "vpc-1fbfbe76",
    "aws_subnet": "subnet-5993d314",
    "is_public": "false"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["self"],
      "most_recent": true
    },
    "instance_type": "t3.micro",
    "ssh_username": "centos",
    "associate_public_ip_address": "{{user `is_public`}}",
    "ami_name": "ga-allure-proxy {{ isotime `2006-01-02-03-04` }}",
    "tags": {
      "Name": "autotests allure reports proxy",
      "OwnedBy": "George Kakovkin"
    }
  }],
  "provisioners": [
    {
      "type": "ansible",
      "extra_arguments": [
        "-v"
      ],
      "playbook_file": "../ansible/github-actions/allure_reports_proxy/main.yaml"
    }
  ]
}

{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "spot_aws_access_key": "{{ vault `/kv/data/bamboo/agents/aws_spot_credentials` `access_key` }}",
    "spot_aws_secret_key": "{{ vault `/kv/data/bamboo/agents/aws_spot_credentials` `secret_access_key` }}",
    "git_admin_user_1": "{{ vault `/kv/data/github/amway/git_admin_user_1` `username` }}",
    "git_admin_user_2": "{{ vault `/kv/data/github/amway/git_admin_user_2` `username` }}",
    "git_admin_user_1_password": "{{ vault `/kv/data/github/amway/git_admin_user_1` `password` }}",
    "git_admin_user_2_password": "{{ vault `/kv/data/github/amway/git_admin_user_2` `password` }}",
    "aws_region": "eu-central-1"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "subnet_id": "subnet-5993d314",
    "associate_public_ip_address": false,
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["860702706577"],
      "most_recent": true
    },
	"vpc_filter": {
		"filters": {
			"tag:Name": "AWS-EIA-Hybris",
			"isDefault": "false"
		}
	},
    "instance_type": "t3.xlarge",
    "ssh_username": "centos",
    "ami_name": "CI-AUTOTEST {{timestamp}}",
    "tags": {
      "Name": "created by packer",
      "ApplicationID": "APP1433689",
      "DataClassification": "Internal",
      "Environment": "DEV"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible/ci-autotest-agent/ && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
	},
    {
      "type": "ansible",
      "extra_arguments": [
        "-v", "--extra-vars", "AWS_RW_PARAMETER_STORE_KEY_ID={{user `spot_aws_access_key`}} AWS_RW_PARAMETER_STORE_SECRET_KEY={{user `spot_aws_secret_key`}} git_admin_user_1={{ user `git_admin_user_1` }} git_admin_user_1_password={{ user `git_admin_user_1_password` }} git_admin_user_2={{ user `git_admin_user_2` }} git_admin_user_2_password={{ user `git_admin_user_2_password` }}"
      ],
      "playbook_file": "../ansible/ci-autotest-agent/main.yml"
    },
    {
      "type": "shell",
      "inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
    }
  ]
}

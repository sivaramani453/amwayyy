{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "aws_vpc": "",
    "aws_subnet": "",
    "is_public": "false"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "CentOS-8-ec2-8.2.2004-20200923-1.x86_64*",
      "root-device-type": "ebs"
      },
      "owners": ["aws-marketplace"],
      "most_recent": true
    },
    "ami_block_device_mappings": [
      {
        "delete_on_termination": true,
        "device_name": "/dev/sda1",
        "volume_type": "gp2",
        "volume_size": 8
      }
    ],
    "instance_type": "t3.micro",
    "ssh_username": "centos",
    "associate_public_ip_address": "{{user `is_public`}}",
    "ami_name": "centos8-golden {{ isotime `2006-01-02-03-04` }}",
    "tags": {
      "Name": "created by packer",
      "ApplicationID": "APP1433689",
      "DataClassification": "Internal",
      "Environment": "DEV"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum update -y",
      "sudo sed -i '$afs.file-max=65535' /etc/sysctl.conf",
      "sudo sed -i '$avm.max_map_count=262144' /etc/sysctl.conf"
    ]
  }]
}

{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "aws_vpc": "",
    "aws_subnet": "",
    "is_public": "false"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["self"],
      "most_recent": true
    },
    "instance_type": "t3.micro",
    "ssh_username": "centos",
    "associate_public_ip_address": "{{user `is_public`}}",
    "ami_name": "rke-node {{ isotime `2006-01-02-03-04` }}",
    "tags": {
      "Name": "created by packer"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible/rke-host && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
    },
    {
      "type": "ansible",
      "extra_arguments": [
        "-v"
      ],
      "playbook_file": "../ansible/rke-host/main.yml"
    }
  ]
}

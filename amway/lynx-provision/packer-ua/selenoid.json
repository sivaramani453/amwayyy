{
  "variables": {
    "application": "selenoid-docker",
    "aws_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_vpc_id": "{{ consul_key `packer/vpc_id` }}",
    "aws_subnet_id": "{{ consul_key `packer/subnet_id` }}",
    "consul_encryption": "{{ consul_key `packer/encryption_key` }}"
  },
  "sensitive-variables": ["aws_key", "aws_secret"],
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-central-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn2-ami-hvm-*-x86_64-gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "vpc_id": "vpc-1fbfbe76",
    "subnet_id": "subnet-03f31d00ae084e534",
    "associate_public_ip_address": false,
    "instance_type": "t3.micro",
    "ssh_timeout": "1000s",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `application`}}-{{ isotime `2006-01-02-03-04` }}",

    "ami_description": "Created by Packer",
    "tags": {
       "Name": "selenoid+docker"
    }


  }],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "sudo yum install -y git-all",
        "sudo curl -O https://bootstrap.pypa.io/get-pip.py",
        "sudo python get-pip.py",
        "sudo pip -V",
        "sudo pip install --upgrade pip",
        "sudo pip install ansible passlib netaddr boto3==1.9.92 botocore==1.12.92",
        "echo 'aws_access_key_id: {{user `aws_key`}}' > /tmp/default_step.yml",
        "echo 'aws_secret_access_key: {{user `aws_secret`}}' >> /tmp/default_step.yml"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/selenoid/selenoid.yml",
      "galaxy_file": "../ansible/selenoid/requirements.yml",
      "clean_staging_directory": true,
      "inventory_groups": "consul_instances",
      "extra_arguments": ["-v --extra-vars \"consul_raw_key={{user `consul_encryption`}}\""]
    },
    {
      "type": "shell",
      "inline": [
        "sudo sed -i '/node_name*/d' /etc/consul/config.json",
        "sudo rm -f /var/consul/node-id",
        "sudo rm -f /tmp/default_step.yml"
      ]
    }
  ]
}

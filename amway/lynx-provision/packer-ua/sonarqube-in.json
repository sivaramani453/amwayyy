{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-central-1",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["860702706577"],
      "most_recent": true
    },
    "instance_type": "t3.xlarge",
    "ssh_username": "centos",
    "ami_name": "sonarqube-in {{timestamp}}",
    "tags": {
      "Name": "created by packer"
    }
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/sonarqube/sonarqube-in.yml"
    }
  ]
}


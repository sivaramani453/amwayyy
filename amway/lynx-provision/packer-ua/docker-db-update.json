{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "docker_registry_username": "{{ vault `/kv/data/nexus/docker` `username` }}",
    "docker_registry_password": "{{ vault `/kv/data/nexus/docker` `password` }}",
    "aws_region": "eu-central-1"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "subnet_id": "subnet-00ab367d",
    "security_group_id": "sg-5689343e",
    "associate_public_ip_address": false,
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["860702706577"],
      "most_recent": true
    },
	"vpc_filter": {
		"filters": {
			"tag:Name": "AWS-EIA-Hybris",
			"isDefault": "false"
		}
	},
    "launch_block_device_mappings": [
     {
      "device_name": "/dev/sda1",
      "volume_size": 20,
      "volume_type": "gp3",
      "delete_on_termination": true
     }
    ],	
    "instance_type": "t3.xlarge",
    "ssh_username": "centos",
    "ami_name": "DOCKER-DB-UPDATE {{timestamp}}",
    "tags": {
      "Name": "created by packer",
      "OwnedBy": "Vladimir Antropov"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible/docker-db-update && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
	},
    {
      "type": "ansible",
      "extra_arguments": [
        "-v", "--extra-vars", "docker_registry_username={{user `docker_registry_username`}} docker_registry_password={{user `docker_registry_password`}}"
      ],
      "playbook_file": "../ansible/docker-db-update/bootstrap-ami.yml"
    },
    {
      "type": "shell",
      "inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
    }
  ]
}

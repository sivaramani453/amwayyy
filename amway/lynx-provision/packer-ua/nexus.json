{
	"variables": {
		"aws_access_key": "",
		"aws_secret_key": ""
	},
	"builders": [{
		"type": "amazon-ebs",
		"access_key": "{{user `aws_access_key`}}",
		"secret_key": "{{user `aws_secret_key`}}",
		"region": "eu-central-1",
		"instance_type": "t2.large",
		"ssh_username": "centos",
		"ami_name": "nexus {{timestamp}}",
		"source_ami_filter": {
			"filters": {
			"virtualization-type": "hvm",
			"name": "centos7-golden*",
			"root-device-type": "ebs"
			},
			"owners": ["860702706577"],
			"most_recent": true
		},
		"tags": {
			"Name": "created by packer"
		},
		"vpc_filter": {
			"filters": {
				"tag:Name": "AWS-EIA-Hybris",
				"isDefault": "false"
			}
		},
		"subnet_filter": {
			"filters": {
				"tag:Name": "EPAM-core-a"
			},
			"most_free": true
		}
	}],
	"provisioners": [
		{
			"type": "shell-local",
			"inline": "cd ../ansible/nexus && ansible-galaxy install -f -r requirements.yml -p ../roles/"
		},
		{
			"type": "shell",
			"inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
		},
		{
			"type": "ansible",
			"extra_arguments": [
				"-v"
			],
			"playbook_file": "../ansible/nexus/nexus.yml"
		}
	]
}

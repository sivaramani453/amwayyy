{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "download_hybris_url": "https://nexus.hybris.eia.amway.net/repository/static-files/hybris/last_6.6.0.19.zip"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "centos7-golden*",
          "root-device-type": "ebs"
        },
        "owners": [
          "860702706577"
        ],
        "most_recent": true
      },
      "vpc_id": "vpc-1fbfbe76",
      "subnet_id": "subnet-00ab367d",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_type": "gp3",
          "volume_size": 15
        }
      ],
      "instance_type": "t3.xlarge",
      "ssh_username": "centos",
      "associate_public_ip_address": false,
      "ami_name": "dev-debug-{{ isotime \"2006-01-02-03-04\" }}",
      "tags": {
        "Name": "created by packer"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible/dev-debug && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
    },
    {
      "type": "shell",
      "inline": [
        "sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"
      ]
    },
    {
      "type": "ansible",
      "extra_arguments": [
        "-v", "--extra-vars", "download_hybris_url={{user `download_hybris_url`}}"
      ],
      "playbook_file": "../ansible/dev-debug/bootstrap.yml"
    }
  ]
}

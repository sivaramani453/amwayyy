{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-central-1",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "centos7-golden*",
      "root-device-type": "ebs"
      },
      "owners": ["860702706577"],
      "most_recent": true
    },
    "instance_type": "t3.xlarge",
    "ssh_username": "centos",
    "ami_name": "db-instance {{timestamp}}",
    "tags": {
      "Name": "created by packer"
    }
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": "cd ../ansible/db-instance && ansible-galaxy install -r requirements.yml -p ../roles/ -f"
    },
     {
      "type": "shell",
      "inline": ["sudo sed -i '$ a ssh-rsa ' /root/.ssh/authorized_keys"]
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/db-instance/mysql.yml"
    }
  ]
}


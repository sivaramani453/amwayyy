[mysqld]
socket=/var/lib/mysql/mysql.sock
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid
port={{ mysql_client_port }}
datadir=/var/lib/mysql
tmpdir=/tmp
lc-messages-dir=/usr/share/mysql
skip-external-locking
#bind-address={{ mysql_bind_address }}
max_allowed_packet="{{ max_allowed_packet }}"
thread_stack="{{ thread_stack }}"
thread_cache-size={{ thread_cache_size }}
query_cache_limit="{{ query_cache_limit }}"
query_cache_size="{{ query_cache_size }}"
query_cache_type="{{ query_cache_type }}"
expire_logs_days={{ expire_logs_days }}
max_binlog_size="{{ max_binlog_size }}"
character_set_server="{{ character_set_server }}"
innodb_flush_log_at_trx_commit={{ innodb_flush_log_at_trx_commit }}
max_connections={{ max_connections }}
innodb_buffer_pool_size={{ ((ansible_memtotal_mb-4096)*0.8)|int|abs }}m
innodb_buffer_pool_instances="{{ innodb_buffer_pool_instances }}"
innodb_purge_threads="{{ innodb_purge_threads }}"
innodb_flush_method="{{ innodb_flush_method }}"
skip_name_resolve
#disk
innodb_io_capacity_max="{{ innodb_io_capacity_max }}"
innodb_io_capacity="{{ innodb_io_capacity }}"
sync_binlog={{ sync_binlog }}
transaction-isolation="{{ transaction_isolation }}"
key_buffer-size={{ key_buffer_size }}
read_buffer_size={{ read_buffer_size }}
table_open_cache={{ table_open_cache }}
long_query_time={{ long_query_time }}

[mysqldump]
quick
quote-names
max_allowed_packet="{{ max_allowed_packet }}"
